{
  "name": "pdf-creator-pro",
  "version": "2.0.0",
  "description": "Aplicación completa para crear, leer y editar PDFs con IA - Versión Avanzada",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "install-deps": "npm install",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "pdf",
    "creator",
    "editor",
    "ai",
    "openai",
    "ocr",
    "security",
    "optimization",
    "annotations",
    "batch-processing"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "pdf-lib": "^1.17.1",
    "pdf-parse": "^1.1.1",
    "pdfjs-dist": "^3.11.174",
    "openai": "^4.24.1",
    "axios": "^1.6.2",
    "node-forge": "^1.3.1",
    "tesseract.js": "^5.0.4",
    "sharp": "^0.33.2",
    "qrcode": "^1.5.3",
    "jszip": "^3.10.1",
    "xml2js": "^0.6.2",
    "commander": "^11.1.0"
  },
  "optionalDependencies": {
    "canvas": "^2.11.2"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.pdfcreator.app",
    "productName": "PDF Creator Pro Advanced",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/*.md",
      "!ADVANCED-FEATURES.md"
    ],
    "win": {
      "target": ["nsis"],
      "icon": "build/icon.ico"
    }
  }
}
